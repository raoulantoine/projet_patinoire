{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}
{% block body %}

    <div class="container">
        <div class="col-6 offset-3">
            <div class="card bg-light">
                <div class="card-body">
                    <h1 class="text-center">Local</h1>
                    <p class="text-center">Ouvrir un compte gratuit</p>
                    <p class="text-center">Créer de meilleures relations entre les propriétaires et les locataires
                        !</p>
                    {{ form_start(registrationForm) }}
                    <div class="card-body">
                    <div class="custom-control custom-switch">
                        <input type="checkbox"  class="custom-control-input" id="customSwitch1">
                        <label class="custom-control-label" for="customSwitch1">Je suis propriétaire</label>
                    </div>
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="customSwitch2">
                        <label class="custom-control-label" for="customSwitch2" >Je suis locataire</label>
                    </div>
                    </div>




                    <div class="card-body">
                        {{ form_widget(registrationForm.fistname, { 'attr': {'placeholder': 'Nom'} }) }}
                    </div>

                    <div class="card-body">
                        {{ form_widget(registrationForm.lastname, { 'attr': {'placeholder': 'Prenom'} }) }}
                    </div>
                    <div class="card-body">

                        {{ form_widget(registrationForm.email, { 'attr': {'placeholder': 'Email'} }) }}
                    </div>
                    <div class="card-body">
                        {{ form_widget(registrationForm.plainPassword.first, { 'attr': {'placeholder': 'Mot de passe'} }) }}
                    </div>
                    <div class="card-body">
                        {{ form_widget(registrationForm.plainPassword.second, { 'attr': {'placeholder': ' Confirmation du mot de passe'} }) }}
                    </div>

                    {{ form_row(registrationForm.agreeTerms) }}

                    <button class="btn btn-outline-primary btn-sm btn-block">Inscription</button>
                    {{ form_end(registrationForm) }}


                    <div class="card-body">
                        <a href="{{ path('app_login') }}">Deja un compte ? Cliquez-ici</a>
                    </div>
                </div>


            </div>
        </div>

    </div>
    <div class="card-body">
    <footer class="page-footer">
        <div class="container text-center">

            <i class="fa fa-copyright "></i> 2019-2020 © Local Tous droits réservés.
        </div>
    </footer>

    </div>


{% endblock %}