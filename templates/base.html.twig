
<!DOCTYPE html>
<html lang="">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Local{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>

<body id="{% block body_id %}{% endblock %}">

{% block nav %}
    <nav id="main-nav" class="container-fluid navbar navbar-expand-lg navbar-light bg-light border rounded mb-3">
        <ul class="navbar-nav">
        </ul>
        <ul class="navbar-nav ml-auto">
            {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('easyadmin') }}">Tableau de bord</a>
                </li>
            {% endif %}
            {% if is_granted('ROLE_USER') %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('housing_index') }}">Dasbord</a>
                </li>
            {% else %}
                <li class="nav-item {% if mainNavHome is defined %}active{% endif %}">
                    <a class="nav-link" href="{{ path('app_logout') }}">Accueil</a>
                </li>
                <li class="nav-item {% if mainNavHome is defined %}active{% endif %}">
                    <a class="nav-link" href="{{ path('advantage') }}">Avantages</a>
                </li>
                <li class="nav-item {% if mainNavHome is defined %}active{% endif %}">
                    <a class="nav-link" href="{{ path('price') }}">Tarifs</a>
                </li>

                <li class="nav-item {% if mainNavHome is defined %}active{% endif %}">
                    <a class="nav-link" href="{{ path('presentation') }}">Présentation</a>
                </li>
                <li class="nav-item {% if mainNavLogin is defined %}active{% endif %}">
                    <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                </li>
                <li class="nav-item {% if mainNavRegistration is defined %}active{% endif %}">
                    <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endblock %}

{% block flash %}
    {% for flash_message in app.session.flashbag.get('success') %}
        <div class="container alert alert-success" role="alert">
            {{ flash_message }}
        </div>
    {% endfor %}
    {% for flash_message in app.session.flashbag.get('info') %}
        <div class="container alert alert-info" role="alert">
            {{ flash_message }}
        </div>
    {% endfor %}
    {% for flash_message in app.session.flashbag.get('warning') %}
        <div class="container alert alert-warning" role="alert">
            {{ flash_message }}
        </div>
    {% endfor %}
    {% for flash_message in app.session.flashbag.get('danger') %}
        <div class="container alert alert-danger" role="alert">
            {{ flash_message }}
        </div>
    {% endfor %}
{% endblock %}

<div class="container bck1 padded">
    {% block body %}
    {% endblock %}
</div>

<div class="card-body">
    <footer class="page-footer">
        <div class="container text-center">

            <a class="nav-link" href="{{ path('contact') }}">Contact</a>

            <i class="fa fa-copyright "></i> 2019-2020 © Local Tous droits réservés.

        </div>
    </footer>

</div>


{% block javascripts %}{% endblock %}
</body>
</html>